/**
 * Returns a list of the available handlers.
 *
 * @return array
 *   The handlers.
 */
function views_summarize_get_handlers() {
  static $handlers = NULL;
  if (!isset($handlers)) {
    $handlers = module_invoke_all('views_summarize_handlers');
  }
  return $handlers;
}

